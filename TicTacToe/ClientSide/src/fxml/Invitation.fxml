<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" styleClass="invite" stylesheets="@../Styles/Styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InvitationController">
    <children>
      <ImageView fitHeight="635.0" fitWidth="820.0" pickOnBounds="true">
         <image>
            <Image url="@../images/bg1.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="335.0" layoutY="192.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/waiting.gif" />
         </image>
      </ImageView>
      <Label fx:id="invitationLbl" alignment="BASELINE_CENTER" contentDisplay="CENTER" layoutX="128.0" layoutY="87.0" prefHeight="58.0" prefWidth="600.0" text="Invitation" textAlignment="CENTER" textFill="#2909cd">
         <font>
            <Font name="Tw Cen MT Condensed Extra Bold" size="28.0" />
         </font></Label>
      <Button fx:id="acceptBtn" alignment="BASELINE_CENTER" contentDisplay="CENTER" layoutX="237.0" layoutY="432.0" mnemonicParsing="false" onAction="#acceptBtnHandler" prefHeight="37.0" prefWidth="82.0" style="-fx-background-color: blue;" styleClass="controlBtn" stylesheets="@../styles/Styles.css" text="Accept" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Tw Cen MT Condensed Extra Bold" size="18.0" />
         </font></Button>
      <Button fx:id="rejectBtn" alignment="BASELINE_CENTER" contentDisplay="CENTER" layoutX="573.0" layoutY="430.0" mnemonicParsing="false" onAction="#rejectBtnHandler" prefHeight="37.0" prefWidth="82.0" style="-fx-background-color: blue;" styleClass="controlBtn" stylesheets="@../styles/Styles.css" text="Reject" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Tw Cen MT Condensed Extra Bold" size="18.0" />
         </font></Button>
      <AnchorPane fx:id="waitingSubscene" layoutY="-1.0" prefHeight="500.0" prefWidth="600.0" styleClass="invite" stylesheets="@../styles/Styles.css">
         <children>
            <SubScene height="500.0" width="600.0">
              <root>
                <Region />
              </root>
            </SubScene>
            <ImageView fitHeight="617.0" fitWidth="809.0" pickOnBounds="true">
               <image>
                  <Image url="@../images/bg1.jpg" />
               </image>
            </ImageView>
            <Label fx:id="waitingLbl" alignment="BASELINE_CENTER" contentDisplay="CENTER" layoutX="160.0" layoutY="154.0" prefHeight="37.0" prefWidth="489.0" text="Waiting for game to start..." textAlignment="CENTER" textFill="#0012dd">
